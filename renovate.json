{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": ["/^release\\/.*/"],
  "packageRules": [
    {
      "description": "Group all non-major updates together",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "bumpVersions": [
        {
          "filePatterns": ["^build\\.gradle\\.kts$"],
          "matchStrings": ["^[\\s]*var\\s+VERSION\\s*=\\s*\"(\\d+\\.\\d+\\.\\d+)\"[\\s]*(?://.*)?$"],
          "bumpType": "patch"
        },
        {
          "filePatterns": ["^build\\.gradle\\.kts$"],
          "matchStrings": ["^[\\s]*var\\s+VERSION\\s*=\\s*\"(\\d+\\.\\d+\\.\\d+-(alpha|beta|rc)\\.\\d+)\"[\\s]*(?://.*)?$"],
          "bumpType": "prerelease"
        }
      ]
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "timezone": "America/Los_Angeles",
  "schedule": ["* 0-6 * * *"]
}
